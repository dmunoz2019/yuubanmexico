<odoo>
    <data>
    <record id="view_sale_badge_form" model="ir.ui.view">
        <field name="name">Sale badge Form View</field>
        <field name="model">sale.badge</field>
        <field name="arch" type="xml">
         <form string="Sale Badge">
                    <header>
                            <!-- <button name="set_to_draft" type="object" string="Reset to Draft" attrs="{'invisible': [('state', '!=', 'done')]}"/>
                            <button name="set_to_open" type="object" string="Open" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                            <button name="set_to_done" type="object" string="Done" attrs="{'invisible': [('state', '!=', 'open')]}"/> -->
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="smart_button_box">
                            <!-- <button name="action_view_stages" type="object" icon="fa-tasks" class="oe_stat_button" string="Stages">
                                <field name="stage_ids" widget="statinfo"/>
                            </button>
                            <button name="action_view_tags" type="object" icon="fa-tags" class="oe_stat_button" string="Tags">
                                <field name="label_ids" widget="statinfo"/>
                            </button> -->
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="sales_target"/>
                                <field name="level_id"/>
                                <field name="priority" widget="priority"/>
                            </group>
                            <group>
                                <field name="badge_image" widget="image" class="oe_avatar" options='{"size": [90, 90]}'/>
                                <field name="description"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Stages">
                                <field name="stage_ids"/>
                            </page>
                            <page string="Tags">
                                <field name="label_ids" widget="many2many_tags"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>

        </field>
    </record>
    </data>
</odoo>